<!DOCTYPE html>
<html>
<head>
  <title>Metternich</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<%= link_to 'Metternich', root_path, :class=>'brand span3' %>
			<div class="nav-collapse">
				<% if current_user %>
					<ul class="nav">
						<li><%= link_to raw('<i class="icon-plus-sign"></i> Hosts'), hosts_path %></li>
					</ul>
					<ul class="nav pull-right">
						<li class="dropdown">
							<%= link_to raw("#{h current_user.nickname} <b class=\"caret\"></b>"), '#', :class=>"dropdown-toggle", :'data-toggle'=>'dropdown' %>
							<ul class="dropdown-menu">
								<li><%= link_to 'Sign out', logout_path, method: 'delete', id: 'signout' %></li>
							</ul>
						</li>
					</ul>
				<% else %>
					<ul class="nav pull-right">
						<li><%= link_to 'Sign in via Twitter', (Rails.env=='development' ? '/auth/developer' : '/auth/twitter'), id: 'signin' %></li>
					</ul>
				<% end %>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="span12">
			<%= yield %>
		</div>
	</div>
</div>

</body>
</html>
